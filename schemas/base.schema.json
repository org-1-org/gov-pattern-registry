{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "base.schema.json",
  "description": "Shared definitions for governance catalog artifacts (pattern, contract, policy, module)",
  "$defs": {
    "metadata": {
      "type": "object",
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*$",
          "description": "Artifact id (lowercase, alphanumeric with hyphens)"
        },
        "version": {
          "type": "string",
          "description": "Semantic version"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description"
        },
        "owner": {
          "type": "string",
          "description": "Owner or maintainer"
        },
        "namespace": {
          "type": "string",
          "description": "Optional namespace (e.g., 'org' for org-private contracts)"
        },
        "status": {
          "type": "string",
          "description": "Current status (e.g., draft, active, deprecated)"
        },
        "updated": {
          "type": "string",
          "description": "Last updated timestamp"
        }
      },
      "additionalProperties": true
    },
    "scope": {
      "type": "object",
      "required": [
        "level",
        "domain"
      ],
      "properties": {
        "level": {
          "type": "string",
          "enum": [
            "component",
            "module",
            "package",
            "repo",
            "org",
            "multi-repo",
            "system"
          ],
          "description": "Scope level for applicability"
        },
        "domain": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*$",
          "description": "Domain tag (e.g., auth, adapters, pdf, infra)"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-]*$"
          },
          "description": "Optional role ids relevant to this artifact at this scope"
        }
      },
      "additionalProperties": true
    },
    "ref": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*(@[0-9]+\\.[0-9]+\\.[0-9]+)?$",
      "description": "Reference in form name or name@semver"
    }
  }
}