{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "pattern.schema.json",
    "type": "object",
    "required": [
        "kind",
        "metadata",
        "scope"
    ],
    "properties": {
        "kind": {
            "const": "pattern"
        },
        "metadata": {
            "$ref": "base.schema.json#/$defs/metadata"
        },
        "scope": {
            "$ref": "base.schema.json#/$defs/scope"
        },
        "composes_contracts": {
            "type": "array",
            "items": {
                "$ref": "base.schema.json#/$defs/ref"
            }
        },
        "recommends_policies": {
            "type": "array",
            "items": {
                "$ref": "base.schema.json#/$defs/ref"
            }
        },
        "invariants": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "required_layout": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "required_interfaces": {
            "type": "object",
            "additionalProperties": true
        },
        "non_goals": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "additionalProperties": true
}