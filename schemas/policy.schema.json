{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "policy.schema.json",
  "description": "Schema for policy governance artifacts",
  "type": "object",
  "required": [
    "kind",
    "metadata",
    "scope"
  ],
  "properties": {
    "kind": {
      "const": "policy"
    },
    "metadata": {
      "$ref": "base.schema.json#/$defs/metadata"
    },
    "scope": {
      "$ref": "base.schema.json#/$defs/scope"
    },
    "level": {
      "type": "string",
      "description": "Optional policy level classifier (e.g., stack, repo, module)."
    },
    "references": {
      "type": "object",
      "additionalProperties": true
    },
    "rules": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "required": [
              "id",
              "rule",
              "severity"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "rule": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": [
                  "error",
                  "warning",
                  "info"
                ]
              },
              "checkable": {
                "type": "boolean"
              },
              "validation": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "notes": {
                "type": "string"
              }
            },
            "additionalProperties": true
          },
          {
            "type": "object",
            "required": [
              "id",
              "description",
              "severity"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": [
                  "error",
                  "warning",
                  "info"
                ]
              },
              "applies_to": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "rationale": {
                "type": "string"
              },
              "refs": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": true
          }
        ]
      }
    },
    "constraints": {
      "type": "object",
      "description": "Path, import, and naming constraints",
      "additionalProperties": true
    },
    "layers": {
      "type": "array",
      "description": "Layer dependency rules",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "roles": {
      "type": "object",
      "description": "Role-specific bindings and directives",
      "additionalProperties": true
    },
    "escalation": {
      "type": "array",
      "description": "Escalation rules",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "enforcement": {
      "type": "array",
      "description": "How rules are enforced",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}