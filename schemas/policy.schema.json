{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "policy.schema.json",
  "description": "Schema for policy governance artifacts",
  "type": "object",
  "required": ["kind", "metadata"],
  "properties": {
    "kind": {
      "const": "policy"
    },
    "metadata": {
      "$ref": "base.schema.json#/$defs/metadata"
    },
    "level": {
      "$ref": "base.schema.json#/$defs/level"
    },
    "extends_pattern": {
      "$ref": "base.schema.json#/$defs/extends_pattern"
    },
    "rules": {
      "type": "array",
      "description": "Policy rules",
      "items": {
        "type": "object",
        "required": ["id", "description", "severity"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique rule identifier"
          },
          "description": {
            "type": "string",
            "description": "What the rule requires"
          },
          "severity": {
            "type": "string",
            "enum": ["error", "warning", "info"],
            "description": "How serious violations are"
          },
          "rationale": {
            "type": "string",
            "description": "Why this rule exists"
          },
          "applies_to": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Roles this rule applies to"
          }
        },
        "additionalProperties": true
      }
    },
    "constraints": {
      "type": "object",
      "description": "Path, import, and naming constraints"
    },
    "layers": {
      "type": "array",
      "description": "Layer dependency rules"
    },
    "roles": {
      "type": "object",
      "description": "Role-specific bindings and directives"
    },
    "escalation": {
      "type": "array",
      "description": "Escalation rules"
    },
    "enforcement": {
      "type": "array",
      "description": "How rules are enforced"
    }
  },
  "additionalProperties": true
}
